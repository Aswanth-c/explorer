{
  "name": "@modularcloud/design-system",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run gen:icons && tsup index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "gen:icons": "npx @svgr/cli --typescript --out-dir icons -- icon-svgs"
  },
  "devDependencies": {
    "@svgr/cli": "^6.5.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "react": "^18.2.0",
    "tailwind-config": "*",
    "tailwindcss": "^3.2.4",
    "tsconfig": "*",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-popover": "1.0.3",
    "@radix-ui/react-select": "^1.2.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tanstack/react-table": "^8.7.4",
    "clsx": "^1.2.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss-radix": "^2.7.0",
    "@radix-ui/react-separator": "^1.0.1",
    "@radix-ui/react-toggle-group": "^1.0.2"
  }
}
